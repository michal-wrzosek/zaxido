{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/component-library/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/component-library/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/component-library"],
      "options": {
        "jestConfig": "libs/component-library/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/react",
        "port": 4400,
        "config": {
          "configFolder": "libs/component-library/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "uiFramework": "@storybook/react",
        "outputPath": "dist/storybook/component-library",
        "config": {
          "configFolder": "libs/component-library/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "codegen": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "npx graphql-codegen --config libs/component-library/codegen.yml"
      }
    },
    "messages": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "npx formatjs extract 'libs/component-library/src/lib/**/*.ts*' --ignore='libs/component-library/src/lib/**/*.d.ts' --out-file libs/component-library/src/lib/messages/en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'"
      }
    }
  }
}
